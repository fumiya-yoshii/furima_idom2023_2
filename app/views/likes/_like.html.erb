<% if user_signed_in? && item.liked_by?(current_user)%>
  <%=link_to "お気に入り解除", item_like_path(item.id),  data: { turbo_method: :delete }, class: "item_likes" , remote: true %><%= item.likes.count %>
<% else %>
  <%=link_to "お気に入り", item_likes_path(item.id), data: { turbo_method: :post }, class: "item_likes" , remote: true %><%= item.likes.count %>
<% end %>